extends baseEmail

block content
  table(style="position: relative; display: block; max-width: 600px; width: 600px; margin: 0 auto; padding: 0; border: 3px groove #BBBBBB77; border-top: none; border-bottom: none; background-color: #CCCCCC33; color: #333333;") 
    tbody
      tr.table-row
        td.table-data(style="position: relative; display: block; width: 89%; margin: 0 auto;")  
          blockquote.salutations(style="position: relative; border: none; margin: 0 auto 30px; text-indent: 20px; font-size: 16px; color: #333333;")= `${greeting} ${firstName} ${lastName},`
      tr.table-row 
        td.table-data(style="position: relative; display: block; width: 87%; margin: 0 auto;") 
          - let admin = false;
          - if (inviteType === `Admin`) admin = true;
          if !admin
            blockquote.salutations(style="position: relative; border: none; text-indent: 20px; font-size: 16px; color: #333333;")= `Great news! Your friend ${friend.firstname} ${friend.lastname} has invited you to be associated with a budget he or she is working with!  You must be a special person of integrity! üòÉ üëç`
          else
            blockquote.salutations(style="position: relative; border: none; text-indent: 20px; font-size: 16px; color: #333333;")= `Great news! Your friend ${friend.firstname} ${friend.lastname} has invited you to be a budget admin! You must be a special person of integrity! üòÉ üëç`

      tr.table-row(style="position: relative; display: block; text-align: center; width: 100%; padding: 10px 0;") 
        td.table-button(style="position: relative; display: block; width: 40%; margin: 0 auto; padding: 0; border: 2px solid #822ABA; border-radius: 15px; background-color: rgba(130,42,186,.6); color: #FAFAFA99;" onmouseover="this.style.backgroundColor = #822ABA; this.color = #FAFAFA;" onmouseleave="this.style.backgroundColor = #822ABA55; this.color = #FAFAFA99;")
          a.link(href=`http://127.0.0.1:2222/App/Users/${user._id}/Budgets/${budgetId}/Accept-Invite/${user._id}/${inviteType}`, target="_blank" style="position: relative; display: block; width: 83.5%; padding: 20px; border-radius: 10px; margin: auto; font-size: 18px; text-decoration: none; color: rgba(250, 250, 250, .8)" onmouseover=" this.style.color = #FAFAFA;") Accept Invite!
      tr.disclaimer(style="postion: relative; margin: 0 auto; padding: 20px 0 0; display: block; width: 87%; font-size: 16px;" colspan="2")
        td.disclaimer-text(style="position: relative; text-align: center; padding: 0 20px;") If you had received this invite in error, please do the friend a solid and disregard and possibly delete this email. üòÑ üëç